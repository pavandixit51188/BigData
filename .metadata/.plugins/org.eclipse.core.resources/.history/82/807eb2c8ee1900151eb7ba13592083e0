import java.io.IOException;
import java.util.TreeMap;

import org.apache.hadoop.io.FloatWritable;
import org.apache.hadoop.io.IntWritable;
import org.apache.hadoop.io.Text;
import org.apache.hadoop.mapreduce.Reducer;
import org.apache.hadoop.mapreduce.Reducer.Context;


public class EntityReducer extends Reducer<Text, IntWritable, Text, FloatWritable> {

	private TreeMap<Float, Text> top10Map = new TreeMap<Float, Text>();
	
	public void reduce(Text key, Iterable<IntWritable> values, Context context) throws IOException, InterruptedException{
		int counter = 0;
		float avg = 0;
		
		for (IntWritable value : values) {
		
			avg += value.get();
			counter++;
		}
		
		if (counter == 0)
			counter = 1;
		avg = avg / counter;
		
		top10Map.put(avg, key);
		
		if(top10Map.size() > 10)
			top10Map.remove(top10Map.firstKey());
		//context.write(key, new FloatWritable(avg));
		
	}
	
	protected void cleanup(Context context){
		for (Float k : top10Map.keySet()) {
			
		}
	}
}
